{
  "name": "diff-detective",
  "version": "1.1.6",
  "description": "AI-powered git commit review tool",
  "main": "dist/index.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "bin": {
    "detective": "dist/index.js",
    "dd": "dist/index.js"
  },
  "scripts": {
    "start": "npx tsx src/index.ts --",
    "start:bun": "bun src/index.ts --",
    "build": "tsc",
    "prepublishOnly": "pnpm run build",
    "release": "npx np",
    "format": "prettier --write \"src/**/*.ts\"",
    "format-staged": "prettier $(git diff --cached --name-only --diff-filter=ACMR | sed 's| |\\\\ |g') --write --ignore-unknown",
    "lint": "eslint ",
    "lint:fix": "eslint --fix",
    "test": "echo ok",
    "prepare": "husky"
  },
  "keywords": [
    "commit",
    "review",
    "ai",
    "git",
    "cli"
  ],
  "author": "Matěj Pešl <matejpesl1@gmail.com>",
  "bugs": "https://github.com/AspireOne/diff-detective/issues",
  "repository": "https://github.com/AspireOne/diff-detective",
  "preferGlobal": true,
  "packageManager": "pnpm@9.1.4",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/configstore": "^6.0.2",
    "@types/inquirer": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.8.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.3",
    "@types/marked-terminal": "^6.1.1",
    "chalk": "^5.3.0",
    "chalk-template": "^1.1.0",
    "commander": "^12.1.0",
    "configstore": "^7.0.0",
    "dotenv": "^16.4.5",
    "inquirer": "^11.1.0",
    "marked": "^11.0.1",
    "marked-terminal": "^7.1.0",
    "openai": "^4.67.1",
    "ora": "^8.1.0",
    "simple-git": "^3.27.0"
  }
}
